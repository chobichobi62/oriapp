<% if user_signed_in? && recipe.favorited_by?(current_user)%>
  <%=link_to "いいね済", recipe_favorites_path(recipe.id),  data: { turbo_method: :delete }, class: "recipe_favorites", remote: true %>
<% else %>
  <%=link_to "いいねする", recipe_favorites_path(recipe.id), data: { turbo_method: :post }, class: "recipe_favorites", remote: true %>
<% end %>