<div class="container-show">
  <div class="main">
    <section class="main__group">
      <h2 class="main__group__title">
        マイページ
      </h2>
    </section>
    <section class="main__table">
      <h2 class="main__table__header">
        お気に入り一覧
      </h2>
      <ul class="main__table__list">
      <% current_user.favorites.each do |favorite| %>
      <%= link_to recipe_path(favorite.recipe), class: "main__table__list__item" do %>
          <%= image_tag favorite.recipe.recipe_image.variant(resize_to_fill: [400, 400]) %>
        </figure>
        <div class="main__table__list__item__body">
          <div class="main__table__list__item__body__text">
            <%= favorite.recipe.title %>
            <br>
          </div>
        </div>
      <% end %>
      <i class="fas fa-chevron-right"></i>
    </li>
      <% end %>
</ul>
    </section>
  </div>
</div>