<div class="contents row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @recipe, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "Title" %>
      <%= form.text_field :recipe_image, placeholder: "Image Url" %>
      <%= form.text_area :material, placeholder: "material", rows: "10" %>
      <%= form.text_area :make, placeholder: "make", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>